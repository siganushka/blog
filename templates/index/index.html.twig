{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<div class="container">
  <div class="mt-3">
    {% if is_granted('ROLE_USER') %}
      {{ app.user.username }}, <a href="{{ logout_path() }}">logout</a>
    {% else %}
      <a href="{{ path('app_login') }}">Login</a>
    {% endif %}
  </div>

  <ul class="mt-3">
    <li><a href="{{ path('app_foo') }}">foo</a></li>
    <li><a href="{{ path('app_bar') }}">bar</a></li>
  </ul>
</div>
{% endblock %}
